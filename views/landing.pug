extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    input(name ="lead_email", type="email", placeholder="Enter Your E-Mail Address")
    button(type="submit") Submit
    if leads
      h1 Leads
      for lead in leads 
        p 
         span #{lead.email}
         
         a(href="/leads/" + lead.id) Details